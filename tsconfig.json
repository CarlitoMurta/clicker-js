{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "sourceMap": true,
    "moduleResolution": "node",
    "removeComments": true,
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "es5", "dom"],
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@ts/*": ["ts/*"],
      "@views/*": ["views/*"],
      "@assets/*": ["assets/*"]
    },
    "allowJs": true
  }
}
