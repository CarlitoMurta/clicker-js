{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist",
    "sourceMap": false,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "removeComments": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "target": "ESNext",
    "module": "commonjs",
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2016", "es5", "dom"],
    "baseUrl": "src",
    "paths": {
      "@controllers/*": ["controllers/*"],
      "@models/*": ["models/*"],
      "@ts/*": ["ts/*"],
      "@views/*": ["views/*"],
      "@assets/*": ["assets/*"]
    }
  }
}
